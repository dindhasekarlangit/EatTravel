        android:textSize="40sp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"/>


</RelativeLayout>